                  style={{ maxHeight: 'calc(100vh - 280px)' }}
                >
                  {messages.map((message, index) => (
                    <div
                      key={index}
                      className={`flex ${message.isBot ? "justify-start" : "justify-end"} ${
                        message.animated ? "animate-fadeInUp" : ""
                      }`}
                    >
                      <div
                        className={`max-w-lg px-4 py-3 rounded-2xl relative ${
                          message.isBot
